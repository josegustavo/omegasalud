---
import { Image } from 'astro:assets';
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import siteConfig from "../data/site.yml";
import nosotrosData from "../data/nosotros.yml";

// Simple markdown to HTML (for bold text)
const renderMarkdown = (text: string) => {
    return text
        .replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')
        .replace(/\n\n/g, '</p><p>')
        .replace(/\n/g, '<br>');
};
---

<Layout title={`${nosotrosData.title} | ${siteConfig.name}`}>
    <Navbar />
    <main class="min-h-[96vh] -mt-16">
        <!-- Hero Section -->
        <section class="relative h-64 md:h-80 overflow-hidden">
            <Image
                src={nosotrosData.heroImage}
                alt={nosotrosData.title}
                width={1920}
                height={400}
                loading="eager"
                class="w-full h-full object-cover"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/30 to-transparent"></div>
            <div class="absolute bottom-0 left-0 right-0 p-8 md:p-12">
                <div class="container mx-auto">
                    <h1 class="text-4xl md:text-5xl font-bold text-white mb-2">{nosotrosData.title}</h1>
                    <p class="text-lg text-white/80">{nosotrosData.subtitle}</p>
                </div>
            </div>
        </section>

        <div class="container mx-auto px-4 py-12">
            <!-- Intro -->
            <section class="max-w-3xl mx-auto mb-16">
                <p class="text-xl leading-relaxed text-base-content/80" set:html={renderMarkdown(nosotrosData.intro)} />
            </section>

            <!-- Mission & Vision -->
            <section class="grid md:grid-cols-2 gap-8 mb-16">
                <div class="bg-primary/5 rounded-2xl p-8">
                    <h2 class="text-2xl font-bold text-primary mb-4">{nosotrosData.mission.title}</h2>
                    <p class="text-base-content/70 leading-relaxed" set:html={renderMarkdown(nosotrosData.mission.content)} />
                </div>
                <div class="bg-secondary/5 rounded-2xl p-8">
                    <h2 class="text-2xl font-bold text-secondary mb-4">{nosotrosData.vision.title}</h2>
                    <p class="text-base-content/70 leading-relaxed" set:html={renderMarkdown(nosotrosData.vision.content)} />
                </div>
            </section>

            <!-- Why Us -->
            <section class="mb-16">
                <h2 class="text-3xl font-bold text-center mb-10">{nosotrosData.whyUs.title}</h2>
                <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
                    {nosotrosData.whyUs.items.map((item: any) => (
                        <div class="bg-base-200 rounded-2xl p-6 text-center hover:shadow-lg transition-shadow">
                            <span class="text-4xl mb-4 block">{item.icon}</span>
                            <h3 class="text-lg font-bold mb-2">{item.title}</h3>
                            <p class="text-sm text-base-content/60">{item.description}</p>
                        </div>
                    ))}
                </div>
            </section>

            <!-- History -->
            <section class="mb-16">
                <div class="grid md:grid-cols-2 gap-8 items-center">
                    <div>
                        <Image
                            src={nosotrosData.history.image}
                            alt={nosotrosData.history.title}
                            width={600}
                            height={400}
                            loading="lazy"
                            class="w-full h-80 object-cover rounded-2xl shadow-lg"
                        />
                    </div>
                    <div>
                        <h2 class="text-3xl font-bold mb-6">{nosotrosData.history.title}</h2>
                        <div class="prose prose-lg text-base-content/70">
                            <p set:html={renderMarkdown(nosotrosData.history.content)} />
                        </div>
                    </div>
                </div>
            </section>

            <!-- Values -->
            <section class="bg-base-200 rounded-3xl p-8 md:p-12">
                <h2 class="text-3xl font-bold text-center mb-10">{nosotrosData.values.title}</h2>
                <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
                    {nosotrosData.values.items.map((value: any) => (
                        <div class="text-center">
                            <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-4">
                                <span class="text-primary text-2xl font-bold">{value.name.charAt(0)}</span>
                            </div>
                            <h3 class="text-lg font-bold mb-2">{value.name}</h3>
                            <p class="text-sm text-base-content/60">{value.description}</p>
                        </div>
                    ))}
                </div>
            </section>

            <!-- CTA -->
            <section class="text-center mt-16">
                <h2 class="text-2xl font-bold mb-4">¿Listo para comenzar tu camino hacia una vida más saludable?</h2>
                <p class="text-base-content/60 mb-6">Explora nuestros productos o contáctanos por WhatsApp</p>
                <div class="flex flex-wrap justify-center gap-4">
                    <a href="/#products" class="btn btn-primary btn-lg rounded-full px-8">
                        Ver Productos
                    </a>
                    <a 
                        href={`https://wa.me/51${siteConfig.social?.whatsapp || siteConfig.whatsapp}`}
                        target="_blank"
                        class="btn btn-outline btn-lg rounded-full px-8"
                    >
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                        </svg>
                        WhatsApp
                    </a>
                </div>
            </section>
        </div>
    </main>
    <Footer />
</Layout>
