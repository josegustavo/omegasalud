---
// Prerender para optimizar build
export const prerender = true;

import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import siteConfig from "../data/site.yml";
import terminosData from "../data/terminos.yml";

// Función para obtener el icono SVG
function getIcon(iconName: string) {
    const icons: Record<string, string> = {
        "shopping-cart": `<path stroke-linecap="round" stroke-linejoin="round" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />`,
        "credit-card": `<path stroke-linecap="round" stroke-linejoin="round" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />`,
        "truck": `<path d="M9 17a2 2 0 11-4 0 2 2 0 014 0zM19 17a2 2 0 11-4 0 2 2 0 014 0z" /><path stroke-linecap="round" stroke-linejoin="round" d="M13 16V6a1 1 0 00-1-1H4a1 1 0 00-1 1v10a1 1 0 001 1h1m8-1a1 1 0 01-1 1H9m4-1V8a1 1 0 011-1h2.586a1 1 0 01.707.293l3.414 3.414a1 1 0 01.293.707V16a1 1 0 01-1 1h-1m-6-1a1 1 0 001 1h1M5 17a2 2 0 104 0m-4 0a2 2 0 114 0m6 0a2 2 0 104 0m-4 0a2 2 0 114 0" />`,
        "package": `<path stroke-linecap="round" stroke-linejoin="round" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />`,
        "tag": `<path stroke-linecap="round" stroke-linejoin="round" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />`,
        "refresh": `<path stroke-linecap="round" stroke-linejoin="round" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />`,
        "shield": `<path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />`,
        "message": `<path stroke-linecap="round" stroke-linejoin="round" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />`,
        "edit": `<path stroke-linecap="round" stroke-linejoin="round" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />`,
        "check": `<path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />`
    };
    return icons[iconName] || icons["check"];
}

// Colores para las secciones
const sectionColors = [
    "bg-emerald-500",
    "bg-blue-500",
    "bg-amber-500",
    "bg-purple-500",
    "bg-rose-500",
    "bg-teal-500",
    "bg-indigo-500",
    "bg-green-500",
    "bg-orange-500",
    "bg-cyan-500"
];
---

<Layout title={`${terminosData.titulo} | ${siteConfig.name}`}>
    <Navbar />
    
    <!-- Hero Section -->
    <section class="bg-linear-to-br from-primary/10 via-base-100 to-secondary/10 pt-24 pb-12">
        <div class="container mx-auto px-4">
            <div class="max-w-4xl mx-auto text-center">
                <h1 class="text-4xl md:text-5xl font-bold text-primary mb-4">
                    {terminosData.titulo}
                </h1>
                <p class="text-lg text-base-content/70 mb-4">
                    {terminosData.subtitulo}
                </p>
                <p class="text-sm text-base-content/50">
                    Última actualización: {terminosData.ultima_actualizacion}
                </p>
            </div>
        </div>
    </section>

    <main class="container mx-auto px-4 py-12">
        <div class="max-w-4xl mx-auto">
            
            <!-- Introducción -->
            <div class="bg-base-200/50 rounded-2xl p-6 md:p-8 mb-10">
                <div class="prose lg:prose-lg max-w-none">
                    <p class="text-lg leading-relaxed text-base-content/80" set:html={terminosData.introduccion.replace(/\n/g, '<br>')} />
                </div>
            </div>

            <!-- Índice rápido -->
            <div class="bg-base-100 border border-base-300 rounded-2xl p-6 mb-10 shadow-sm">
                <h2 class="text-lg font-bold mb-4 flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 10h16M4 14h16M4 18h16" />
                    </svg>
                    Índice de Contenido
                </h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-2">
                    {terminosData.secciones.map((seccion: any, index: number) => (
                        <a 
                            href={`#seccion-${index}`} 
                            class="flex items-center gap-2 p-2 rounded-lg hover:bg-base-200 transition-colors group"
                        >
                            <span class={`w-6 h-6 rounded-full ${sectionColors[index % sectionColors.length]} text-white text-xs flex items-center justify-center font-bold`}>
                                {index + 1}
                            </span>
                            <span class="text-sm group-hover:text-primary transition-colors">{seccion.titulo}</span>
                        </a>
                    ))}
                </div>
            </div>

            <!-- Secciones -->
            <div class="space-y-8">
                {terminosData.secciones.map((seccion: any, index: number) => (
                    <section 
                        id={`seccion-${index}`}
                        class="bg-base-100 border border-base-300 rounded-2xl overflow-hidden shadow-sm scroll-mt-24"
                    >
                        <div class={`${sectionColors[index % sectionColors.length]} px-6 py-4 flex items-center gap-3`}>
                            <div class="bg-white/20 rounded-full p-2">
                                <svg 
                                    xmlns="http://www.w3.org/2000/svg" 
                                    class="h-6 w-6 text-white" 
                                    fill="none" 
                                    viewBox="0 0 24 24" 
                                    stroke="currentColor" 
                                    stroke-width="2"
                                    set:html={getIcon(seccion.icono)}
                                />
                            </div>
                            <h2 class="text-xl font-bold text-white">
                                {index + 1}. {seccion.titulo}
                            </h2>
                        </div>
                        <div class="p-6">
                            <div class="prose prose-sm lg:prose-base max-w-none prose-headings:text-primary prose-strong:text-base-content prose-ul:my-2 prose-li:my-0" set:html={
                                seccion.contenido
                                    // Convertir **texto** a <strong>
                                    .replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')
                                    // Procesar listas: encontrar bloques de líneas que empiezan con -
                                    .replace(/(?:^|\n)(- .+(?:\n- .+)*)/g, (match: string) => {
                                        const items = match.trim().split('\n- ').filter(Boolean);
                                        const listItems = items.map((item: string) => `<li>${item.replace(/^- /, '')}</li>`).join('');
                                        return `<ul class="list-disc pl-5 my-3">${listItems}</ul>`;
                                    })
                                    // Convertir dobles saltos de línea en párrafos
                                    .split('\n\n')
                                    .filter((p: string) => p.trim())
                                    .map((p: string) => {
                                        // Si ya es una lista, no envolver en <p>
                                        if (p.trim().startsWith('<ul')) return p;
                                        return `<p class="mb-4">${p.replace(/\n/g, '<br>')}</p>`;
                                    })
                                    .join('')
                            } />
                        </div>
                    </section>
                ))}
            </div>

            <!-- Nota Final -->
            <div class="mt-12 bg-linear-to-r from-primary/10 to-secondary/10 rounded-2xl p-8 text-center">
                <h3 class="text-2xl font-bold text-primary mb-3">
                    {terminosData.nota_final.titulo}
                </h3>
                <p class="text-base-content/70 mb-6 max-w-xl mx-auto">
                    {terminosData.nota_final.contenido}
                </p>
                <a 
                    href={`https://wa.me/${siteConfig.social.whatsapp}?text=Hola, tengo una consulta sobre los términos y condiciones`}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="btn btn-primary gap-2"
                >
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                    </svg>
                    {terminosData.nota_final.boton_texto}
                </a>
            </div>

            <!-- Volver arriba -->
            <div class="text-center mt-8">
                <a href="#" class="btn btn-ghost btn-sm gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M5 10l7-7m0 0l7 7m-7-7v18" />
                    </svg>
                    Volver arriba
                </a>
            </div>
        </div>
    </main>

    <Footer />
</Layout>

<style>
    /* Animación suave al hacer scroll a las secciones */
    html {
        scroll-behavior: smooth;
    }
    
    /* Estilos para el contenido de las secciones */
    .prose ul {
        margin-top: 0.5rem;
        margin-bottom: 0.5rem;
    }
    
    .prose li {
        margin-top: 0.25rem;
        margin-bottom: 0.25rem;
    }
</style>
