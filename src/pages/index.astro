---
// Prerender para optimizar imágenes en build time
export const prerender = true;

import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Hero from "../components/Hero.astro";
import Footer from "../components/Footer.astro";
import ProductCard from "../components/ProductCard.astro";
import Promotions from "../components/Promotions.astro";

import { products } from "../data/products";
import siteConfig from "../data/site.yml";
---

<Layout
	title={`${siteConfig.name} - ${siteConfig.tagline}`}
	description={siteConfig.description}
>
	<Navbar isTransparent={true} />
	<Hero />

	<!-- Trust Badges -->
	<section class="bg-base-200 py-6">
		<div class="container mx-auto px-4">
			<div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-6">
				<div class="flex items-center gap-3 justify-center md:justify-start">
					<div class="bg-emerald-500 rounded-full p-2">
						<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
							<path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
						</svg>
					</div>
					<div>
						<p class="font-bold text-sm">Pago Contra Entrega</p>
						<p class="text-xs text-base-content/60">Pagas al recibir</p>
					</div>
				</div>
				<div class="flex items-center gap-3 justify-center md:justify-start">
					<div class="bg-blue-500 rounded-full p-2">
						<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
							<path d="M9 17a2 2 0 11-4 0 2 2 0 014 0zM19 17a2 2 0 11-4 0 2 2 0 014 0z" />
							<path stroke-linecap="round" stroke-linejoin="round" d="M13 16V6a1 1 0 00-1-1H4a1 1 0 00-1 1v10a1 1 0 001 1h1m8-1a1 1 0 01-1 1H9m4-1V8a1 1 0 011-1h2.586a1 1 0 01.707.293l3.414 3.414a1 1 0 01.293.707V16a1 1 0 01-1 1h-1m-6-1a1 1 0 001 1h1M5 17a2 2 0 104 0m-4 0a2 2 0 114 0m6 0a2 2 0 104 0m-4 0a2 2 0 114 0" />
						</svg>
					</div>
					<div>
						<p class="font-bold text-sm">Envío Gratis</p>
						<p class="text-xs text-base-content/60">Huaycán y zonas cercanas</p>
					</div>
				</div>
				<div class="flex items-center gap-3 justify-center md:justify-start">
					<div class="bg-amber-500 rounded-full p-2">
						<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
							<path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
						</svg>
					</div>
					<div>
						<p class="font-bold text-sm">Entrega Rápida</p>
						<p class="text-xs text-base-content/60">Mismo día disponible</p>
					</div>
				</div>
				<div class="flex items-center gap-3 justify-center md:justify-start">
					<div class="bg-green-500 rounded-full p-2">
						<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-white" fill="currentColor" viewBox="0 0 24 24">
							<path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
						</svg>
					</div>
					<div>
						<p class="font-bold text-sm">Atención WhatsApp</p>
						<p class="text-xs text-base-content/60">Respuesta inmediata</p>
					</div>
				</div>
			</div>
		</div>
	</section>

	<Promotions />

	<main class="container mx-auto px-4 py-8 animate-grid" id="products">
		<h2 class="text-3xl font-bold text-center mb-8 text-primary">
			Nuestros Productos
		</h2>
		<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
			{
				products.map((product) => (
					<div class="animate-item opacity-0">
						<ProductCard {...product} />
					</div>
				))
			}
		</div>
	</main>

	<Footer />
</Layout>
