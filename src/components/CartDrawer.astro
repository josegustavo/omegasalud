---
import siteConfig from "../data/site.yml";
---

<div class="flex flex-col h-full">
    <div
        class="flex items-center justify-between mb-4 pb-4 border-b border-base-300"
    >
        <h2 class="text-2xl font-bold">Tu Pedido</h2>
        <label for="cart-drawer" class="btn btn-sm btn-circle btn-ghost" aria-label="Cerrar carrito">
            <span aria-hidden="true">‚úï</span>
        </label>
    </div>

    <div id="cart-content" class="flex flex-col flex-1 overflow-hidden">
        <div id="cart-items" class="flex-1 overflow-y-auto space-y-4">
            <!-- Cart items will be inserted here -->
        </div>

        <div class="mt-auto pt-4 border-t border-base-300 px-1">
            <!-- Trust Badge - Pago Contra Entrega -->
            <div class="bg-emerald-50 border border-emerald-200 rounded-xl p-3 mb-4">
                <div class="flex items-start gap-3">
                    <div class="bg-emerald-500 rounded-full p-1.5 mt-0.5">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                        </svg>
                    </div>
                    <div>
                        <p class="font-bold text-emerald-800 text-sm">üíµ Paga al recibir tu pedido</p>
                        <p class="text-xs text-emerald-700 mt-0.5">Sin pagos adelantados. Pagas cuando te entregamos.</p>
                    </div>
                </div>
            </div>

            <div class="flex justify-between items-center mb-4">
                <span class="text-lg font-bold">Total:</span>
                <span id="cart-total" class="text-2xl font-bold text-primary"
                    >S/ 0.00</span
                >
            </div>

            <!-- Step 1: Input Form -->
            <form id="checkout-form" class="space-y-3">
                <div class="form-control">
                    <label class="label" for="customer-phone">
                        <span class="label-text">Celular</span>
                    </label>
                    <div class="input input-bordered flex items-center gap-2">
                        <span class="text-base-content/70 font-medium" aria-hidden="true"
                            >{siteConfig.phoneNumber?.prefix || "+51"}</span
                        >
                        <input
                            type="tel"
                            id="customer-phone"
                            placeholder="999 999 999"
                            class="grow bg-transparent border-none focus:outline-none"
                            required
                            pattern="[9][0-9]{8}"
                            maxlength="9"
                            minlength="9"
                            aria-describedby="phone-prefix"
                        />
                    </div>
                </div>

                <div class="form-control">
                    <label class="label" for="customer-name">
                        <span class="label-text">Nombre completo</span>
                    </label>
                    <input
                        type="text"
                        id="customer-name"
                        placeholder="Tu nombre completo"
                        class="input input-bordered w-full"
                        maxlength="50"
                        minlength="2"
                        required
                    />
                </div>

                <button
                    type="submit"
                    id="submit-order-btn"
                    class="btn btn-primary btn-block mt-4"
                >
                    Confirmar Pedido
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="h-5 w-5 ml-2"
                        fill="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372s-1.04 1.016-1.04 2.479 1.065 2.876 1.213 3.074c.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414z"
                        ></path>
                    </svg>
                </button>
            </form>

            <!-- Step 2: Confirmation (Success) -->
            <div id="confirmation-step" class="hidden space-y-4 text-center">
                <div class="alert alert-success shadow-lg">
                    <div>
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="stroke-current flex-shrink-0 h-6 w-6"
                            fill="none"
                            viewBox="0 0 24 24"
                            ><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                            ></path></svg
                        >
                        <span>¬°Pedido registrado!</span>
                    </div>
                </div>
                <p class="text-sm">
                    Hemos enviado un mensaje de confirmaci√≥n a <strong
                        id="confirm-phone-display"></strong>
                </p>
                <p class="font-bold">¬øTe lleg√≥ el mensaje a WhatsApp?</p>

                <div class="grid grid-cols-1 gap-2">
                    <button
                        id="confirm-received-btn"
                        class="btn btn-success text-white"
                    >
                        S√≠, recib√≠ el mensaje
                    </button>
                    <button id="retry-phone-btn" class="btn btn-outline btn-sm">
                        No, corregir n√∫mero
                    </button>
                </div>
            </div>

            <!-- Step 3: Fallback (Service Error) -->
            <div
                id="fallback-step"
                class="hidden space-y-4 text-center"
                data-store-phone={siteConfig.social?.whatsapp ||
                    siteConfig.whatsapp}
            >
                <div class="alert alert-warning shadow-lg">
                    <div>
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="stroke-current shrink-0 h-6 w-6"
                            fill="none"
                            viewBox="0 0 24 24"
                            ><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"
                            ></path></svg
                        >
                        <span
                            >Hubo un problema con el servicio de mensajer√≠a.</span
                        >
                    </div>
                </div>
                <p class="text-sm">
                    Tu pedido <strong
                        >#<span id="fallback-order-id"></span></strong
                    >
                    ha sido registrado, pero no pudimos enviar el mensaje autom√°tico.
                </p>
                <p class="text-sm">
                    Por favor, env√≠a el mensaje manualmente v√≠a WhatsApp Web:
                </p>

                <a
                    id="whatsapp-web-btn"
                    href="#"
                    target="_blank"
                    class="btn btn-success btn-block text-white"
                >
                    Enviar por WhatsApp Web
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="h-5 w-5 ml-2"
                        fill="currentColor"
                        viewBox="0 0 24 24"
                        ><path
                            d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372s-1.04 1.016-1.04 2.479 1.065 2.876 1.213 3.074c.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414z"
                        ></path></svg
                    >
                </a>
            </div>
        </div>
    </div>

    <script>
        import { cartItems } from "../store/cart";

        const cartItemsContainer = document.getElementById("cart-items");
        const cartContent = document.getElementById("cart-content"); // New container
        const cartTotal = document.getElementById("cart-total");
        const checkoutForm = document.getElementById(
            "checkout-form",
        ) as HTMLFormElement;
        const confirmationStep = document.getElementById("confirmation-step");
        const fallbackStep = document.getElementById("fallback-step");
        const phoneInput = document.getElementById(
            "customer-phone",
        ) as HTMLInputElement;
        const nameInput = document.getElementById(
            "customer-name",
        ) as HTMLInputElement;
        const submitBtn = document.getElementById("submit-order-btn");
        const confirmReceivedBtn = document.getElementById(
            "confirm-received-btn",
        );
        const retryPhoneBtn = document.getElementById("retry-phone-btn");
        const confirmPhoneDisplay = document.getElementById(
            "confirm-phone-display",
        );
        const fallbackOrderId = document.getElementById("fallback-order-id");
        const whatsappWebBtn = document.getElementById(
            "whatsapp-web-btn",
        ) as HTMLAnchorElement;

        // Load from LocalStorage
        if (phoneInput)
            phoneInput.value = localStorage.getItem("customerPhone") || "";
        if (nameInput)
            nameInput.value = localStorage.getItem("customerName") || "";

        function renderCart() {
            const items = cartItems.get(); // Convert map to array

            if (!cartItemsContainer || !cartTotal) return;

            // Sort items by name to prevent jumping
            items.sort((a, b) => a.name.localeCompare(b.name));

            if (items.length === 0) {
                cartItemsContainer.innerHTML =
                    '<p class="text-center text-base-content/60 py-8">Tu carrito est√° vac√≠o</p>';
                cartTotal.textContent = "S/ 0.00";
                return;
            }

            const total = items.reduce(
                (sum, item) => sum + item.price * item.quantity,
                0,
            );
            cartTotal.textContent = `S/ ${total.toFixed(2)}`;

            cartItemsContainer.innerHTML = items
                .map(
                    (item) => `
            <div class="flex items-center gap-4 p-4 bg-base-100 rounded-lg">
                <img src="${item.image}" alt="${item.name}" class="w-16 h-16 object-cover rounded" />
                <div class="flex-1">
                    <h3 class="font-bold">${item.name}</h3>
                    <p class="text-sm text-base-content/60">S/ ${item.price.toFixed(2)}</p>
                </div>
                <div class="flex items-center gap-2">
                    <button class="btn btn-xs btn-circle decrease-qty" data-id="${item.id}">-</button>
                    <span class="font-bold">${item.quantity}</span>
                    <button class="btn btn-xs btn-circle increase-qty" data-id="${item.id}">+</button>
                </div>
                <button class="btn btn-xs btn-circle btn-error remove-item" data-id="${item.id}">‚úï</button>
            </div>
        `,
                )
                .join("");

            // Re-attach listeners
            attachListeners(items);
        }

        function attachListeners(items: any[]) {
            document.querySelectorAll(".increase-qty").forEach((btn) => {
                btn.addEventListener("click", (e) => {
                    const id = (e.target as HTMLElement).dataset.id!;
                    const item = items.find((i) => i.id === id);
                    if (item)
                        cartItems.set([
                            ...items.filter((i) => i.id !== id),
                            { ...item, quantity: item.quantity + 1 },
                        ]);
                });
            });
            document.querySelectorAll(".decrease-qty").forEach((btn) => {
                btn.addEventListener("click", (e) => {
                    const id = (e.target as HTMLElement).dataset.id!;
                    const item = items.find((i) => i.id === id);
                    if (item && item.quantity > 1)
                        cartItems.set([
                            ...items.filter((i) => i.id !== id),
                            { ...item, quantity: item.quantity - 1 },
                        ]);
                });
            });
            document.querySelectorAll(".remove-item").forEach((btn) => {
                btn.addEventListener("click", (e) => {
                    const id = (e.target as HTMLElement).dataset.id!;
                    cartItems.set(items.filter((i) => i.id !== id));
                });
            });
        }

        cartItems.subscribe(renderCart);
        renderCart();

        // Handle Checkout
        if (checkoutForm) {
            checkoutForm.addEventListener("submit", async (e) => {
                e.preventDefault();
                const items = cartItems.get();
                if (items.length === 0) return alert("Tu carrito est√° vac√≠o");

                const total = items.reduce(
                    (sum, item) => sum + item.price * item.quantity,
                    0,
                );
                let phone = phoneInput.value.replace(/\D/g, ""); // Remove non-digits

                // If user typed 51 prefix (e.g. 519...), strip it
                if (phone.startsWith("51") && phone.length === 11) {
                    phone = phone.substring(2);
                }

                // Validate Peru format: 9 digits, starts with 9
                if (!/^9\d{8}$/.test(phone)) {
                    return alert(
                        "Por favor ingresa un n√∫mero de celular v√°lido (9 d√≠gitos comenzando con 9).",
                    );
                }
                const name = nameInput.value;

                // Save to LocalStorage
                localStorage.setItem("customerPhone", phone);
                localStorage.setItem("customerName", name);

                if (submitBtn) {
                    submitBtn.setAttribute("disabled", "true");
                    submitBtn.textContent = "Enviando...";
                }

                try {
                    const res = await fetch("/api/order", {
                        method: "POST",
                        headers: { "Content-Type": "application/json" },
                        body: JSON.stringify({ phone, name, items, total }),
                    });

                    const data = (await res.json()) as any;

                    if (res.ok) {
                        // Success: Show Confirmation Step
                        cartContent?.classList.add("hidden");
                        checkoutForm.classList.add("hidden");
                        confirmationStep?.classList.remove("hidden");
                        if (confirmPhoneDisplay)
                            confirmPhoneDisplay.textContent = phone;
                    } else {
                        // Error Handling
                        if (data.code === "INVALID_NUMBER") {
                            alert(
                                "El n√∫mero de celular parece incorrecto. Por favor verif√≠calo.",
                            );
                            if (submitBtn) {
                                submitBtn.removeAttribute("disabled");
                                submitBtn.textContent = "Confirmar Pedido";
                            }
                        } else if (data.code === "SERVICE_ERROR") {
                            // Service Error: Show Fallback Step
                            cartContent?.classList.add("hidden");
                            checkoutForm.classList.add("hidden");
                            fallbackStep?.classList.remove("hidden");

                            if (fallbackOrderId)
                                fallbackOrderId.textContent = data.orderId;

                            // Configure WhatsApp Web Button
                            if (whatsappWebBtn) {
                                const message = `Hola, he realizado el pedido #${data.orderId} en Omega Salud.`;
                                const storePhone =
                                    fallbackStep?.dataset.storePhone ||
                                    "51999999999";
                                whatsappWebBtn.href = `https://wa.me/${storePhone}?text=${encodeURIComponent(message)}`;
                            }
                        } else {
                            alert(
                                "Error: " + (data.error || "Intenta de nuevo"),
                            );
                            if (submitBtn) {
                                submitBtn.removeAttribute("disabled");
                                submitBtn.textContent = "Confirmar Pedido";
                            }
                        }
                    }
                } catch (error) {
                    console.error(error);
                    alert("Error de conexi√≥n");
                    if (submitBtn) {
                        submitBtn.removeAttribute("disabled");
                        submitBtn.textContent = "Confirmar Pedido";
                    }
                }
            });
        }

        // Confirm Received
        confirmReceivedBtn?.addEventListener("click", () => {
            cartItems.set([]); // Clear cart ONLY here
            localStorage.removeItem("customerPhone"); // Optional: clear phone if desired, or keep for next time

            // Close drawer
            const drawerCheckbox = document.getElementById(
                "cart-drawer",
            ) as HTMLInputElement;
            if (drawerCheckbox) drawerCheckbox.checked = false;

            // Reset UI after a delay
            setTimeout(() => {
                checkoutForm?.classList.remove("hidden");
                confirmationStep?.classList.add("hidden");
                fallbackStep?.classList.add("hidden");
                if (submitBtn) {
                    submitBtn.removeAttribute("disabled");
                    submitBtn.textContent = "Confirmar Pedido";
                }
            }, 500);
        });

        // Retry Phone (Correct Number)
        retryPhoneBtn?.addEventListener("click", () => {
            // Do NOT clear cart
            checkoutForm?.classList.remove("hidden");
            confirmationStep?.classList.add("hidden");
            fallbackStep?.classList.add("hidden");
            if (submitBtn) {
                submitBtn.removeAttribute("disabled");
                submitBtn.textContent = "Confirmar Pedido";
            }
        });
    </script>
</div>
